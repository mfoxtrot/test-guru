<tr>
  <td><%= question.id %></td>
  <td><%= question.body %></td>
  <td><%= question.answers_count %></td>
  <td>
    <%= link_to 'Просмотр', question_path(question) %>
    <%= link_to 'Редактирование', edit_question_path(question) %>
    <%= link_to 'Удалить', question_path(question), method: :delete, data: {confirm: 'Подтвердите удаление'} %>
  </td>
</tr>
