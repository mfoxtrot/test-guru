<tr>
  <td><%= question.id %></td>
  <td><%= question.body %></td>
  <td><%= question.answers_count %></td>
  <td>
    <%= link_to 'Просмотр', test_question_path(question.test, question) %>
    <%= link_to 'Редактирование', edit_test_question_path(question.test, question) %>
    <%= link_to 'Удалить', test_question_path(question.test, question), method: :delete, data: {confirm: 'Подтвердите удаление'} %>
  </td>
</tr>
