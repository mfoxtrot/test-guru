<header class="header-container">
  <div class="col-8">
    <h1><%= link_to 'Test-Guru', root_path %></h1>
  </div>
  <div class="col-4">
    <%= link_to 'Signup', signup_path unless logged_in? %>
    <%= link_to 'Login', login_path unless logged_in? %>
    <% if logged_in? %>
      Welcome, <b><%= current_user.email %></b> Guru
    <% end %>
    <%= link_to 'Logout', logout_path if logged_in? %>
  </div>
</header>
